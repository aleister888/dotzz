#!/bin/bash

# Función para obtener y validar la hora
obtener_hora() {
	local HORA
	HORA=$(printf "07:00\n12:00\n17:00\n22:00" | dmenu -p "Ingrese una hora (HH:MM):")

	if [[ $HORA =~ ^([01][0-9]|2[0-3]):[0-5][0-9]$ ]]; then
		echo "$HORA"
	else
		return 1
	fi
}

# Define las opciones con iconos
OPTIONS=(
	" Bloquear"
	" Suspender"
	" Suspender hasta las..."
	" Cerrar sesión"
	" Reinciar"
	" Apagar"
	"󰤄 Hibernar"
	" BIOS"
	" Reinciar dwm"
)

# Presenta las opciones usando dmenu
CHOSEN=$(printf "%s\n" "${OPTIONS[@]}" | dmenu -c -l ${#OPTIONS[@]})

# Maneja la opción elegida usando un caso
case $CHOSEN in
"${OPTIONS[0]}")
	sleep 0.17
	i3lock-fancy-rapid 4 4
	;;
"${OPTIONS[1]}") loginctl suspend ;;
"${OPTIONS[2]}")
	HORA=$(obtener_hora)
	if [ $? -eq 0 ]; then
		sudo /usr/local/bin/wakeat "$HORA" now
	fi
	;;
"${OPTIONS[3]}") $TERMINAL $TERMTITLE "scratchpad" $TERMEXEC sudo pkill X ;;
"${OPTIONS[4]}") sudo systemctl reboot ;;
"${OPTIONS[5]}") sudo systemctl poweroff ;;
"${OPTIONS[6]}") loginctl hibernate ;;
"${OPTIONS[7]}") loginctl reboot --firmware-setup ;;
"${OPTIONS[8]}") pkill dwm ;;
esac
